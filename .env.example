# Notarium+ Environment Configuration
# Copy this file to .env and fill in the required values

# Backend Configuration
BACKEND_URL=http://localhost:56533
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:8787

# Security (Required)
# Generate a secure random string with:
#   openssl rand -base64 32
# Or visit: https://randomkeygen.com/
JWT_SECRET=your_secure_jwt_secret_min_32_chars

# Database (Cloudflare D1)
# Set via wrangler.toml for production

# Admin Configuration (Optional)
# Only set if you want to restrict admin access by email domain
ADMIN_EMAIL_DOMAIN=your-domain.com
ADMIN_PASSWORD=your_secure_admin_password

# AI/LLM Configuration (Required for AI features)
# DeepSeek API for chat, summaries, quiz generation
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Google/Gemini API for OCR and additional AI features
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# OAuth Configuration (Optional)
# For Google OAuth authentication
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Email Configuration (Optional)
# For sending notifications and password resets
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# File Storage (Optional)
# For storing uploaded note images
STORAGE_BUCKET=notarium-uploads
STORAGE_REGION=auto

# General Settings
NODE_ENV=production
LOG_LEVEL=info
